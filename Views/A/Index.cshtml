@model List<Post>
@{
    ViewBag.Title = "Bài viết";
    Layout = "_Layout";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Bài viết</li>
    </ol>
</nav>
@foreach (var i in Model)
{
    <div class="row shadow-sm p-3 mb-5 bg-white rounded">
        <div class="col-md-4">
            <a href="@Url.Action(@i.Link, "A")"><img src="~/resource/image/@i.Thumbnail" data-src="" class="img-fluid"
                    alt="" width="640" height="360"></a>
        </div>
        <div class="col-md-8">
            <h2><a class="link-offset-2 link-underline-opacity-0 text-decoration-none" href="@Url.Action(@i.Link, "A")"
                    style="color: var(--bs-body-color)">@i.Title</a></h2>
            <a href="@Url.Action(@i.Link, "A")" style="text-decoration: none;" class="btn btn-primary">Xem chi tiết</a>
        </div>
    </div>
}

